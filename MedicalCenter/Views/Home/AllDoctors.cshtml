@model List<Doctor>

<style>
    body {
        background-color: #f8f8f8;
        margin: 0;
        padding: 0;
    }

    .search-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 20px;
        background-color: #f4f4f4;
        transition: background-color 0.3s;
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
    }

        .search-bar input[type="text"] {
            flex: 1;
            padding: 8px;
            border: none;
            border-radius: 3px;
            font-size: 1rem;
            background-color: #f4f4f4;
            transition: background-color 0.3s;
            margin-right: 10px;
        }

        .search-bar button {
            padding: 8px 16px;
            border: none;
            border-radius: 3px;
            background-color: #428bca;
            color: #fff;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .search-bar input[type="text"]:focus,
            .search-bar button:hover {
                background-color: #357ebd;
            }

    /* Rest of the code */

    .doctors-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom:10%;
    }

    .doctor-card {
        background-color: #ffffff; /* Updated background color */
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }

        .doctor-card .time-slots {
            display: flex;
            flex-wrap: wrap;
            margin-top: 10px;
        }

        .doctor-card .time-slot {
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 3px;
            padding: 5px 10px;
            margin-right: 5px;
            margin-bottom: 5px;
            font-size: 0.9rem;
        }

        .doctor-card .days-available {
            display: flex;
            flex-wrap: wrap;
            margin-top: 10px;
        }

        .doctor-card .day {
            background-color: #428bca;
            color: #fff;
            border-radius: 3px;
            padding: 5px 10px;
            margin-right: 5px;
            margin-bottom: 5px;
            font-size: 0.9rem;
        }

    .button-container {
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
    }

        .button-container button {
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

            .button-container button.edit-button {
                background-color: #428bca;
                color: #fff;
            }

            .button-container button.delete-button {
                background-color: #d9534f;
                color: #fff;
            }

            .button-container button:hover {
                opacity: 0.8;
            }

    .displayData {
        display: flex;
        flex-direction: column;
        margin: 10%;
    }
</style>

<h1>All Doctors</h1>

<div class="search-bar">
    <input type="text" name="search_text" placeholder="Search doctors...">
    <button onclick="searchDoctors()">Search</button>
</div>

<div class="doctors-list">
    @foreach (var doctor in Model)
    {
        <div class="doctor-card">
            <h3>@doctor.Specialization</h3>
            <p>Doctor Name: @doctor.Name</p>
            <p>Sub Speciality: @doctor.Sub_specialty</p>

            <p>Times Available:</p>
            <div class="time-slots">
                @foreach (var time in doctor.Hours.time)
                {
                    <div class="time-slot">
                        @time
                    </div>
                }
            </div>

            <p>Days Available:</p>
            <div class="days-available">
                @foreach (var day in doctor.Hours.DayOfWeek)
                {
                    <div class="day">
                        @day
                    </div>
                }
            </div>

            <p>Hospital: @doctor.Hospital</p>

            <div class="button-container">
                <button class="edit-button" onclick="editAppointment(@doctor.Id)">Edit</button>
                <button class="delete-button" onclick="deleteAppointment(@doctor.Id)">Delete</button>
            </div>
        </div>
    }
</div>

<script>



    function editAppointment(appointmentId) {
        // Perform edit action for the specified appointment
        console.log("Edit appointment with ID: " + appointmentId);
    }

    function deleteAppointment(appointmentId) {
        // Perform delete action for the specified appointment
        console.log("Delete appointment with ID: " + appointmentId);
    }

    // fetch all doctors when page is load

    function searchDoctors() {
        var searchInput = document.querySelector('input[type="text"]').value;

        fetch('/Home/SearchDoctor', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(searchInput)
        })
            .then(function (response) {
                if (response.ok) {
                    location.reload(); // Refresh the page on successful response    
                    return response.json();
                }
                throw new Error('Network response was not ok.');
            })
            .then(function (data) {
                console.log(data); // Handle the response data
            })
            .catch(function (error) {
                console.log('Error:', error.message);
            });
    }



</script>
